mixin table_row(index, item)
  tr
    td= index
    td= item._id
    td= item.event_types
    td= item.target_url
    td
      a.btn.btn-info.btn-sm(href='/subscriptions/' + item._id) View
      span &nbsp;&nbsp;&nbsp;
      a.btn.btn-danger.btn-sm(href='/subscriptions/' + item._id + '/destroy') Delete

mixin table(collection)
  .table-responsive
    table.table.table-striped
      thead
        tr
          th.text-center #
          th.text-center _id
          th.text-center Events
          th.text-center Target URL
          th.text-center Actions
      tbody
        each item, index in collection
          +table_row(index, item)
