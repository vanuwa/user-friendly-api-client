extends ../layout.pug

block nav
  .nav
    ol.breadcrumb
      li
        a(href='/') Features
      li
        a(href='/calls') Calls
      li.active New

block header
  .text-center
    h2 Create a call

block content
  form.form-horizontal(action='/calls/create', method='POST')
    .col-md-offset-2.col-md-8
      .panel.panel-default
        .panel-heading
          .panel-title From
        .panel-body
          .form-group.row
            .radio-inline.col-md-offset-3.col-md-3
              label.control-label
                input(type='radio', name='call_from_key', id='from_extension_id', value='extension_id', checked)
                | Extension ID
            .radio-inline.col-md-3
              label.control-label
                input(type='radio', name='call_from_key', id='from_number', value='number')
                | Number

          .form-group.row
            label.control-label.col-md-3(for='call_from_value') Value
            .col-md-6
              input#call_from_value.form-control(type='text', name='call_from_value', value=call.from.value)

      .panel.panel-default
        .panel-heading
          .panel-title To
        .panel-body
          .form-group.row
            .radio-inline.col-md-offset-3.col-md-3
              label.control-label
                input(type='radio', name='call_to_key', id='to_extension_id', value='extension_id', checked)
                | Extension ID
            .radio-inline.col-md-3
              label.control-label
                input(type='radio', name='call_to_key', id='to_number', value='number')
                | Number

          .form-group.row
            label.control-label.col-md-3(for='call_to_value') Value
            .col-md-6
              input#call_to_value.form-control(type='text', name='call_to_value', value=call.to.value)

      .form-group
        .col-sm-offset-3.col-sm-6
          button.btn.btn-success.form-control(type='submit') Make a call
